{
  "name": "chatkit-widgets",
  "version": "1.0.0",
  "description": "Comprehensive ChatKit widget development framework with real-time capabilities, authentication, and dynamic content generation",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "validate": "node scripts/validate-widgets.js",
    "build": "npm run lint && npm run test",
    "docs": "jsdoc src/**/*.js -d docs/jsdoc",
    "docker:build": "docker build -t chatkit-widgets .",
    "docker:run": "docker run -p 3000:3000 chatkit-widgets"
  },
  "keywords": [
    "chatkit",
    "widgets",
    "ui-components",
    "real-time",
    "websockets",
    "express",
    "jwt",
    "authentication"
  ],
  "author": "ChatKit Widget Framework Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.1",
    "joi": "^17.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.53.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-import": "^2.29.0",
    "jsdoc": "^4.0.2",
    "socket.io-client": "^4.7.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/chatkit-widgets.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/chatkit-widgets/issues"
  },
  "homepage": "https://github.com/your-org/chatkit-widgets#readme",
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "standard"
    ],
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "no-console": "off",
      "semi": ["error", "always"]
    }
  },
  "nodemonConfig": {
    "watch": [
      "src/"
    ],
    "ext": "js,json",
    "ignore": [
      "*.test.js",
      "coverage/",
      "docs/"
    ]
  }
}